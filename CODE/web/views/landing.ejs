				<div class="alert alert-success" role="alert">
					<%= success %>
				</div>
			<% } %>
		</div>

		<div id="landing-header">
			<h1>Welcome to ApartView!</h1>
			<br>
			<br>
			<h3>Review apartments for rent near Atlanta and provide predictions on aparment renting prices</h3>
			<br>
			<a href="/home" class="btn btn-lg btn-success">View all the available apartments</a>
		</div>

